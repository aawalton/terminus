{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "stages"
  ],
  "properties": {
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "tier",
          "name",
          "essence"
        ],
        "properties": {
          "tier": {
            "type": "string",
            "enum": [
              "Mortal",
              "Essence Gathering",
              "Soul Fire",
              "Star Core",
              "Nascent Soul",
              "Monarch"
            ]
          },
          "name": {
            "type": "string",
            "pattern": "^(Mortal|Essence Gathering [1-9]|Soul Fire [1-9]|Star Core [1-9]|Nascent Soul [1-9]|Monarch [1-9])$"
          },
          "essence": {
            "type": "string",
            "pattern": "^[0-9]+$"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}